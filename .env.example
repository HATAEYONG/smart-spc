# Smart SPC System Environment Variables

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=spc_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Use SQLite for development (True/False)
# Set to False for production with PostgreSQL
USE_SQLITE=True

# ============================================
# Django Configuration
# ============================================
DJANGO_SECRET_KEY=dev-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Backend Port
BACKEND_PORT=8000

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
FRONTEND_URL=http://localhost:5173

# ============================================
# Redis Configuration
# ============================================
REDIS_PORT=6379

# ============================================
# Celery Configuration
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# AI Service Configuration
# ============================================
# AI Provider: openai, anthropic, gemini, ollama, huggingface
AI_PROVIDER=openai

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key-here

# HuggingFace API Key
HUGGINGFACE_API_KEY=hf-your-huggingface-api-key-here

# Open Source Model Configuration
# For Ollama: llama2, mistral, codellama, etc.
# For HuggingFace: mistralai/Mistral-7B-Instruct-v0.2, etc.
OPEN_SOURCE_MODEL=llama2

# Ollama Server URL (for AI_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
# Inside Docker, use host.docker.internal to access host's Ollama
# OLLAMA_BASE_URL=http://host.docker.internal:11434

# ============================================
# APS Worker Configuration
# ============================================
APS_DSN=postgresql://postgres:postgres@db:5432/spc_db
APS_GRAPH_EDGE_VIEW=aps_dep_edge
APS_GRAPH_DEPTH=3
APS_SOFT_FREEZE_SHIFT_LIMIT_MIN=15
APS_GATE_UTIL_THRESHOLD=0.85
APS_GATE_DELAY_THRESHOLD=120

# ============================================
# Build Configuration
# ============================================
# Build target: development or production
BUILD_TARGET=development

# ============================================
# Monitoring Configuration
# ============================================
FLOWER_PORT=5555

# ============================================
# Nginx Configuration (Production)
# ============================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
