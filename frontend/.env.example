# SPC Frontend Environment Variables
# 이 파일을 .env로 복사하고 사용합니다

# Django Backend API URL (New REST API)
VITE_DJANGO_API_URL=http://localhost:8000/api/v1

# API Base URL (Legacy)
VITE_API_BASE_URL=http://localhost:8000/api

# WebSocket URL
VITE_WS_URL=ws://localhost:8000/ws

# Django Backend URL
VITE_BACKEND_URL=http://localhost:8000

# API Timeout (ms)
VITE_API_TIMEOUT=30000

# Enable Debug Mode
VITE_DEBUG=true

# Page Size (Pagination)
VITE_DEFAULT_PAGE_SIZE=20

# Chart Refresh Interval (ms)
VITE_CHART_REFRESH_INTERVAL=30000

# WebSocket URL (for real-time updates, optional)
# VITE_WS_URL=ws://localhost:8000/ws/spc/

# Authentication (if using JWT)
# VITE_AUTH_TOKEN_KEY=auth_token
# VITE_AUTH_REFRESH_KEY=refresh_token

# Feature Flags
VITE_ENABLE_RUN_RULES=true
VITE_ENABLE_AI_PREDICTION=true
VITE_ENABLE_ANOMALY_DETECTION=true

# Default Chart Type
VITE_DEFAULT_CHART_TYPE=XBAR_R

# Default Sample Size
VITE_DEFAULT_SAMPLE_SIZE=5

# Default Subgroup Size
VITE_DEFAULT_SUBGROUP_SIZE=5

# Alert Auto Refresh (ms)
VITE_ALERT_REFRESH_INTERVAL=10000

# Data Export Settings
VITE_EXPORT_FORMAT=pdf

# Logging
VITE_LOG_LEVEL=debug

# Production Build Settings (uncomment for production)
# VITE_API_BASE_URL=https://api.your-domain.com/api/spc
# VITE_BACKEND_URL=https://api.your-domain.com
# VITE_DEBUG=false
# VITE_LOG_LEVEL=error
