# Django Settings
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=smart_spc
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# Frontend
FRONTEND_URL=http://localhost:5173

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Service Settings
AI_PROVIDER=openai  # Options: openai, anthropic, gemini, ollama, huggingface
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Open Source Models (Ollama or HuggingFace)
# Used when AI_PROVIDER is set to "ollama" or "huggingface"
OLLAMA_BASE_URL=http://localhost:11434  # Ollama server URL
OPEN_SOURCE_MODEL=llama2  # Model name: llama2, mistral, codellama, or HuggingFace model ID
